{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": false,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "packages/node_modules/@ciscospark/**/*",
    "packages/node_modules/@webex/**/*"
  ],
  "exclude": [
    "packages/node_modules/@ciscospark/**/dist/*",
    "packages/node_modules/@webex/**/dist/*",
    "packages/node_modules/@ciscospark/**/es/*",
    "packages/node_modules/@webex/**/es/*",
    "packages/node_modules/@ciscospark/**/cjs/*",
    "packages/node_modules/@webex/**/cjs/*",
    "node_modules/**/*",
    "dist"
  ]
}
